<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <%- include('../../pageStruct/imports'); -%>
</head>

<body>
    <%- include('../../pageStruct/navbar'); -%>

    <div class="container">
        <div class="row">
            <h1><%= title %></h1>

        </div>

        <button type="button" class="btn btn-primary">Novo Post</button>

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Título</th>
                    <th scope="col">Descrição</th>
                </tr>
            </thead>
            <tbody>
                <% posts.forEach(function (post) { %>
                <tr>
                    <td><%= post.title %></td>
                    <td><%= post.description %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

</body>

</html>